{
  "compilerOptions": {
      "module": "esnext",
      "target": "es2017",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "jsx": "react",
      "lib": [
          "es6",
          "dom"
      ],
      "baseUrl": ".",
      "paths": {
          "~/*": [
              "src/*"
          ]
      }
  },
  "exclude": [
      "node_modules",
      "platforms"
  ]
}